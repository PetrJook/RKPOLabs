#:kivy 1.0

<Container>:
    orientation: 'vertical'
    lbl: lbl
    Label:
        id: lbl
        multiline: False
        size_hint: 1, 0.2
        padding: 12
        font_size: 45
        text_size: self.size
        halign: 'right'
        valign: 'middle'
        text: '0'
